<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="task">
    <!-- (C)reate -->
    <insert id="insert" parameterType="taskvo">
        <![CDATA[
		insert
			into post (no, name, done, card_no)
			values(null, #{name}, #{done}, #{cardNo})
		]]>
        <selectKey keyProperty="no" resultType="long" order="AFTER">
            <![CDATA[
			select last_insert_id()
			]]>
        </selectKey>
    </insert>

    <!-- Read-->
    <select id="findall" resultType="taskvo">
        <![CDATA[
            select * from task order by no
        ]]>
    </select>

    <update id="updateCheck" parameterType="long">
        <![CDATA[
            update task
            set done = #{done}
            where no = #{no}
        ]]>
    </update>

    <delete id = "deleteByNo" parameterType = "long">
        <![CDATA[
			delete
			from task
			where no=#{no}
		]]>
    </delete>
</mapper>
